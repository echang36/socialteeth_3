
<!DOCTYPE html>
<html>

<head>
  <title>Socialteeth2</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<body class="<%= controller.controller_name %>">


	<div id="user_nav" >
		<% if user_signed_in? %>
			Signed in as <%= current_user.email %>
			<%= link_to "Sign out", destroy_user_session_path %>
		<% else %>
			<%=link_to "sign in", new_user_session_path%> or <%= link_to "sign up", new_user_registration_path %>
		<% end %>
	</div>

  <div id="banner">
    <%= image_tag("chattering_teeth.jpg") %>
    <%= @page_title || "Social Teeth" %>
  </div>
  
  <div id="columns">
    <div id="side">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/ads">Ads Index</a></li>
        <li><a href="">Place Holder 2</a></li>
        <li><a href="">Place Holder 3</a></li>
      </ul>
    </div>
    
	<div id="main">
      <%= yield %>
    </div>
  
  </div>
<!-- END_HIGHLIGHT -->
</body>
</html>

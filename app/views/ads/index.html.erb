<h1>Listing Ads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Goal</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.title %></td>
    <td><%= number_to_currency(ad.goal) %></td>
    <td><%= ad.user.name%></td>
    <td><%= link_to 'Show', ad %></td>
  </tr>
<% end %>
</table>

